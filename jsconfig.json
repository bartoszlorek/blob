{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@app": ["src/*"],
      "@gui": ["src/gui/*"],
      "@layers": ["src/layers/*"],
      "@levels": ["src/levels/*"],
      "@models": ["src/models/*"],
      "@scenes": ["src/scenes/*"],
      "@state": ["src/state/*"],
      "@traits": ["src/traits/*"],
      "@utils": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist", "public"]
}
