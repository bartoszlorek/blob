{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "paths": {
      "@app": ["./src/*"],
      "@actions": ["./src/actions/*"],
      "@core": ["./src/core/*"],
      "@data": ["./src/data/*"],
      "@gui": ["./src/gui/*"],
      "@layers": ["./src/layers/*"],
      "@state": ["./src/state/*"],
      "@utils": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
